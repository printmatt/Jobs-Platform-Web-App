<div class="banner">
    <div class="navbar">
        <a href="/" class="center-align"><img src="css/logo.png" class="signlogo"></a>
        <ul>
            <li><a href="dashboard">Home</a></li>
            <li><a href="applications">Applications</a></li>
            <li><a href="about">About Us</a></li>
        </ul>
    </div>
    <div class="content">
        {{#if jobs}}
        <table class="striped">
            <thead>
                <tr>
                    <th>Job ID</th>
                    <th>Title</th>
                    <th>YOE Required</th>
                    <th>Required Skills</th>
                    <th>Salary</th>
                    <th>Company Name</th>
                    <th>Apply Using Your Profile</th>
                </tr>
            </thead>
            <tbody>
                {{#each jobs}}
                <tr>
                    <td>{{job_id}}</td>
                    <td>{{job_title}}</a></td>
                    <td>{{yoe_required}}</td>
                    <td>{{skills_required}}</td>
                    <td>{{salary}}</td>
                    <td>{{company_name}}</td>
                    <td>
                        <form action="/apply" method="POST" id="apply_form">
                            <input type="hidden" name="job_id" value="{{job_id}}">
                            <button type="submit" class="btn green">
                                APPLY
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p>There is nothing left for you to apply.</p>
        {{/if}}
    </div>
</div>